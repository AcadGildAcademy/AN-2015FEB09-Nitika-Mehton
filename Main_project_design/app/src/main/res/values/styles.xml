<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:itemBackground">@drawable/item_selector</item>
        <item name="android:popupBackground">@drawable/item_selector</item>

        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>
    <style name="CustomActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:indeterminateProgressStyle">@android:style/Widget.ProgressBar.Small.Inverse</item>

        <item name="android:background">@color/orange</item>
    </style>
    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <item name="android:src">@drawable/logosmall</item>
        <!-- Support library compatibility -->
        <item name="background">@color/orange</item>
    </style>


</resources>
