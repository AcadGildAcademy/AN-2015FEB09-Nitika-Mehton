<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/cart_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#000000"
        android:padding="1dp" />

    <TextView
        android:id="@+id/order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:layout_toRightOf="@+id/cart_image"/>

             <TextView
                    android:id="@+id/order_id_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size"
                    android:layout_toRightOf="@+id/order_name" />

    <TextView
        android:id="@+id/order_id_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_name"
        android:text="Date Of Order"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:layout_toRightOf="@+id/cart_image"/>

    <TextView
        android:id="@+id/order_id_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_id_name_value"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:layout_toRightOf="@+id/order_id_date" />

    <TextView
        android:id="@+id/order_Selling_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_id_date"
        android:text="@string/selling_price"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/cart_image"/>

    <TextView
        android:id="@+id/order_id_selling_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:text="1000"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/order_id_date_value"
        android:layout_toRightOf="@+id/order_Selling_price" />

    <TextView
        android:id="@+id/order_multiple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:text="X"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/order_id_date_value"
        android:layout_toRightOf="@+id/order_id_selling_price_value" />

    <TextView
        android:id="@+id/order_quantity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"

        android:layout_marginLeft="5dp"
        android:layout_below="@+id/order_id_date_value"
                android:layout_toRightOf="@+id/order_multiple" />

    <TextView
        android:id="@+id/order_total_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_Selling_price"
        android:text="Total"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/cart_image"/>

    <TextView
        android:id="@+id/order_total_id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="20dp"

        android:layout_marginLeft="5dp"

        android:layout_below="@+id/order_id_selling_price_value"
        android:layout_toRightOf="@+id/order_total_id" />


    <TextView
        android:id="@+id/cart_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click To See Detail"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:layout_below="@+id/order_total_id"
        android:paddingTop="5dp"
        android:layout_toRightOf="@+id/cart_image"
        />





</RelativeLayout>