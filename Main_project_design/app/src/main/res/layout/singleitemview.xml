<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#000000"
        android:padding="1dp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:layout_below="@+id/image"
        />

          <TextView
                android:id="@+id/id_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:textSize="@dimen/text_size"
                android:layout_toRightOf="@+id/name"
                android:layout_below="@+id/image"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:text="@string/discription"
        android:layout_below="@+id/name"
        />

            <TextView
                android:id="@+id/id_description_value"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                 android:layout_toRightOf="@+id/description"
                android:layout_below="@+id/id_name_value"/>

    <TextView
        android:id="@+id/id_cost_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:layout_below="@+id/description"
        android:text="@string/cost_price" />

            <TextView
                android:id="@+id/id_cost_price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                android:text="---"
                android:layout_below="@+id/id_description_value"
                android:layout_toRightOf="@+id/id_cost_price"

        />

    <TextView
        android:id="@+id/Selling_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:layout_below="@+id/id_cost_price"
        android:text="@string/selling_price" />

         <TextView
                android:id="@+id/id_selling_price_value"
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
             android:textColor="@color/black"
             android:textSize="@dimen/text_size"
                android:layout_below="@+id/id_cost_price_value"
                 android:layout_toRightOf="@+id/Selling_price" />
    <TextView
        android:id="@+id/id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="X"
        android:textSize="@dimen/text_size"
        android:layout_below="@+id/id_cost_price_value"
        android:layout_toRightOf="@+id/id_selling_price_value" />
    <EditText
        android:id="@+id/id_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:background="@color/white"
        android:text="1"
        android:ems="10"
        android:textSize="@dimen/text_size"
        android:layout_below="@+id/id_cost_price_value"
        android:layout_toRightOf="@+id/id_txt" />

    <TextView
        android:id="@+id/id_total_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"

        android:textSize="@dimen/text_size"
        android:layout_below="@+id/Selling_price"
        android:layout_toRightOf="@+id/image" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Selling_price"
        android:layout_marginTop="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_to_cart"
            android:id="@+id/id_button_add_cart"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:layout_weight="1"
            android:background="@color/orange"
            android:layout_marginRight="20dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy_now"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:id="@+id/id_button_buy_now"
            android:background="@color/orange"

            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brand"
        android:id="@+id/id_brand"
        android:layout_below="@+id/linearLayout2"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:id="@+id/id_brand_value"
        android:layout_toRightOf="@+id/id_brand"
        android:layout_below="@+id/linearLayout2" />


</RelativeLayout>