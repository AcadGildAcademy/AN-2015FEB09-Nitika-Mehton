<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/imag"
        android:src="@drawable/logo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Profile"
        android:layout_marginTop="20dp"
        android:textSize="10dp"
        android:textColor="@color/orange"
        android:id="@+id/textView"
        android:layout_gravity="center"
        />




    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:paddingBottom="10dp"
        android:ems="10"
        android:textColor="@color/orange"
        android:layout_marginBottom="5dp"
        android:hint="email"
        android:id="@+id/india_user_email"
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:textColor="@color/orange"
        android:paddingBottom="10dp"
        android:hint="last name"
        android:id="@+id/india_name"

        android:background="@color/white"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:textColor="@color/orange"
        android:paddingBottom="10dp"
        android:hint="last name"
        android:id="@+id/india_last_name"

        android:background="@color/white"
        android:layout_gravity="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:textColor="@color/orange"
        android:paddingBottom="10dp"
        android:hint="enter address"
        android:layout_gravity="center"
        android:id="@+id/india_address" />





    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:paddingBottom="10dp"
        android:ems="10"
        android:layout_gravity="center"
        android:id="@+id/india_state"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/india_city"
        android:paddingBottom="10dp"
        android:ems="10"
        android:textColor="@color/orange"
         android:layout_gravity="center" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/india_pin_code"
        android:ems="10"
        android:textColor="@color/orange"
        android:paddingBottom="10dp"
        android:hint="Enter Pin"
        android:layout_gravity="center"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:textColor="@color/orange"
        android:paddingBottom="10dp"
        android:hint="enter phone no"
        android:layout_gravity="center"
        android:id="@+id/india_ph_no"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/linearLayout"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save "
            android:layout_marginRight="10dp"

            android:id="@+id/india_save"
            android:background="@color/orange" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:id="@+id/india_cancel"
            android:background="@color/orange" />
    </LinearLayout>

</LinearLayout>