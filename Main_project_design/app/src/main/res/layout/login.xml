<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:paddingBottom="10dp"
        android:ems="10"
        android:textColor="@color/orange"
        android:layout_marginBottom="5dp"
        android:hint="@string/username"
        android:id="@+id/id_username"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="@color/orange"
        android:paddingBottom="10dp"
        android:hint="@string/password"
        android:id="@+id/id_password"
        android:layout_below="@+id/id_username"
        android:layout_centerHorizontal="true"
        android:background="@color/white" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/id_password"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sign in"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:id="@+id/signin"
            android:background="@color/orange" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:layout_weight="1"
            android:id="@+id/cacel"
            android:background="@color/orange" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imag"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textColor="@color/orange"
        android:id="@+id/textView"
        android:layout_below="@+id/imag"
        android:layout_alignLeft="@+id/id_username"
        android:layout_alignStart="@+id/id_username"
        android:layout_marginTop="41dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMEMBER ME"
        android:id="@+id/id_remember_me"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:ems="10"
        android:layout_below="@+id/id_password" />


</RelativeLayout>